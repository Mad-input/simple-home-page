  <input type="checkbox" id="checkbox" />
</div>

<style>
  .toggle-theme {
    position: relative;
    width: fit-content;
  }

  .toggle-theme .tag {
    display: inline-block;
    position: absolute;
    left: 0.1875rem;
    top: calc(50% - 0.7625rem);
    background: #fff;
    border-radius: 100%;
    width: 1.125rem;
    height: 1.125rem;
    z-index: 100;
    pointer-events: none;
    transition: left, 0.2s;
  }

  .toggle-theme .tag.move {
    left: calc(100% - 1.3125rem);
  }

  .toggle-theme input[type="checkbox"] {
    appearance: none;
    position: relative;
    width: 3rem;
    height: 1.5rem;
    background: #223344;
    border-radius: 1.25rem;
    padding: 0.3125rem;
    cursor: pointer;
    outline: none;
  }

  .moon,
  .sun {
    position: absolute;
    top: calc(50% - 0.8125rem);
    z-index: 200;
    pointer-events: none;
    width: 1.125rem;
    height: 1.125rem;
  }

  .moon {
    right: 0.1875rem;
    color: #f2f9fe;
  }

  .sun {
    left: 0.1875rem;
    color: #111729;
  }

  body.dark .moon {
    color: #111729;
  }

  body.dark .sun {
    color: #f2f9fe;
  }

  @media screen and (max-width: 640px) {
    body.dark .toggle-theme input[type="checkbox"] {
      background: #111729;
    }
  }
</style>

<script>
  const chec = document.getElementById("checkbox");
  const tag = document.getElementById("tag");

  const saveThemeInStorage = (dat: Boolean) => {
    if (dat) localStorage.setItem("theme", "dark");
    else localStorage.setItem("theme", "light");
  };

  const changeTheme = () => {
    if (localStorage.getItem("theme") == "dark") {
      tag.classList.add("move");
      document.body.classList.add("dark");
      chec.checked = true;
    } else {
      tag.classList.remove("move");
      document.body.classList.remove("dark");
      chec.checked = false;
    }
  };
  changeTheme();

  chec.addEventListener("change", (e) => {
    saveThemeInStorage(e.target.checked);
    changeTheme();
  });
</script>
